import java.util.Scanner;
import java.io.*;
class Pattern{
	public static void main(String[]args) {
		int i,j;
		Scanner sc=new Scanner(System.in);
		System.out.print("enter no of rows:");
		int n=sc.nextInt();
for(i=0;i<n;i++){
		for(j=0;j<n;j++) { 
			if(j>=i) 
				System.out.print("*");
			else 
               System.out.print(" ");
		}
    System.out.println();
	}
	}
}
